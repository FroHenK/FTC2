<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rayan.egor.ftc.DummyMatchResultsActivity">

    <TextView
        android:id="@+id/matchResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Ничья"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchResultTextView">

        <TableRow>

            <TextView
                android:id="@+id/myNicknameTextView"
                android:gravity="left"
                android:padding="3dp"
                android:text="Dummy_Player#1"
                android:textColor="@color/colorCorrect"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enemyNicknameTextView"
                android:gravity="right"
                android:padding="3dp"
                android:text="Dummy_Enemy#1"
                android:textColor="@color/colorWrong"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:gravity="center_horizontal">

            <TextView
                android:id="@+id/myCorrectTextView"
                android:gravity="left"
                android:padding="3dp"
                android:text="КАКА"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enemyCorrectTextView"
                android:gravity="right"
                android:padding="3dp"
                android:text="БАКА"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:gravity="center_horizontal">

            <TextView
                android:id="@+id/myRatingChangeTextView"
                android:gravity="left"
                android:padding="3dp"
                android:text="КАКА"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enemyRatingChangeTextView"
                android:gravity="right"
                android:padding="3dp"
                android:text="БАКА"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
